<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/storyScrollView"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="5dp"
  >
  <LinearLayout
    android:id="@+id/StoryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <TextView
      android:id="@+id/storyTitle"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:textAppearance="@style/NewsItemTitle"
      android:layout_gravity="center_vertical"/>
    <TextView
      android:id="@+id/storyByline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:textAppearance="@style/NewsStorySubtext"/>
    <TextView
      android:id="@+id/storyDate"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:textAppearance="@style/NewsStorySubtext"/>
    <ImageView
      android:id="@+id/storyImage"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:adjustViewBounds="true"
      android:scaleType="fitCenter"
      android:paddingBottom="5dp"/>
    <WebView
      android:id="@+id/storyWebView"
      android:layout_height="wrap_content"
      android:layout_width="match_parent">
    </WebView>

  </LinearLayout>

</ScrollView>